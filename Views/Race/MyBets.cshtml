@model IEnumerable<HorseRacing.Models.Bet>

@{
    ViewBag.Title = "My Bets";
}

<h2>My Bets</h2>

<table class="table">
    <tr>
        <th>User Name</th>
        <th>Race ID</th>
        <th>Horse Name</th>
        <th>Amount</th>
        <th>Bet Type</th>
        <th>Winning Bet</th>
    </tr>

    @foreach (var bet in Model)
    {
        <tr>
            <td>@bet.UserName</td>
            <td>@bet.RaceId</td>
            <td>@bet.HorseName</td>
            <td>@bet.Amount</td>
            <td>@bet.BetType</td>
            <td>@(bet.IsWinningBet ? "Yes" : "No")</td>
        </tr>
    }
</table>
